<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root"
    app:startDestination="@id/splashActivity">

    <activity
        android:id="@+id/splashActivity"
        android:name="com.example.login.main.SplashActivity"
        android:label="Splash/Roteamento"
        tools:layout="@layout/activity_splash">

        <action
            android:id="@+id/action_splash_to_auth"
            app:destination="@id/authActivity"
            app:popUpTo="@id/nav_root"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/mainActivity"
            app:popUpTo="@id/nav_root"
            app:popUpToInclusive="true"/>

    </activity>

    <activity
        android:id="@+id/authActivity"
        android:name="com.example.login.auth.AuthActivity"
        android:label="Fluxo de Autenticação"
        tools:layout="@layout/activity_auth">

        <action
            android:id="@+id/action_auth_to_main"
            app:destination="@id/mainActivity"
            app:popUpTo="@id/nav_root"
            app:popUpToInclusive="true"/>

    </activity>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.login.main.MainActivity"
        android:label="App Principal"
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_main_to_auth"
            app:destination="@id/authActivity"
            app:popUpTo="@id/nav_root"
            app:popUpToInclusive="true"/>

    </activity>

</navigation>